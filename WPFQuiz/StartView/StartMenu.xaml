<UserControl x:Class="WPFQuiz.StartView.StartMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFQuiz.StartView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Transparent">

        <!-- My row ex.header, buttons, -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- TitelNamn -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Padding="10" Background="#20FFFFFF" BorderBrush="#22FFFFFF">
            <TextBlock Text=" The Best Quiz Game... EVER!" FontSize="42" FontWeight="SemiBold" Foreground="#DCCB8E" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap">
            </TextBlock>
        </Border>

        <!--Buttons (knappat typ i mitten ) -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="040">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0">
                <Button Content="▶ Play Quiz" Click="Play_Click" FontSize="18" FontWeight="Bold" Padding="15" Foreground="White" 
                     Background="#7A613F" BorderBrush="#DCCB8E" BorderThickness="2" Margin="0,0,20,0"/>
                <Button Content="✎ Create Quiz" Click="Create_Click" FontSize="18" Padding="15" FontWeight="Bold" Foreground="White"  
                     Background="#7A613F" BorderBrush="#DCCB8E" BorderThickness="2"  Margin="0,0,20,0"/>
                <Button Content="🛠 Edit Quiz" Click="Edit_Click" Padding="15" FontSize="18" FontWeight="Bold" Foreground="White"  
                     Background="#7A613F" BorderBrush="#DCCB8E" BorderThickness="2"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
