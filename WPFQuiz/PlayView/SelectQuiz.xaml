<UserControl x:Class="WPFQuiz.PlayView.SelectQuiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFQuiz.PlayView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Padding="8" BorderThickness="0" Margin="0,0,0,20" Background="#20FFFFFF">
            <Grid>
                <Button Content="← Back" Click="Back_Click" Padding="8" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left"
                      VerticalAlignment="Top" Margin="15,18,0,0" Background="#7A613F" Foreground="White" BorderBrush="#DCCB8E"
                       BorderThickness="2"/>
                <TextBlock Text="Select Quiz" FontSize="40" FontWeight="SemiBold" Foreground="#DCCB8E" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" >
                </TextBlock>
            </Grid>
        </Border>

        <!-- Lista i mitten (knappar)-->
        <Grid Grid.Row="1" Margin="0,20,0,10">
            <StackPanel Width="600" Orientation="Vertical" HorizontalAlignment="Center">
                <ItemsControl x:Name="QuizList">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}" Click="Quiz_Click" Margin="0,12,0,0" Padding="10" 
                                    HorizontalAlignment="Stretch" Height="40" Background="#1E2A22" Foreground="White" BorderBrush="#DCCB8E"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
