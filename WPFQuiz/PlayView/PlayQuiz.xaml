<UserControl x:Class="WPFQuiz.PlayView.PlayQuiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFQuiz.PlayView"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
   
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!-- titel-->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Padding="10" Background="#20FFFFFF" BorderBrush="#22FFFFFF">
            <Grid>
                <!-- backåt button-->
                <Button Content="← Back" Click="Back_Click" Grid.Row="0" Padding="5" FontWeight="Bold" FontSize="16" 
                     HorizontalAlignment="Left"
                    VerticalAlignment="Top" Margin="15,10,0,0" Background="#7A613F" Foreground="White" BorderBrush="#DCCB8E"
                    BorderThickness="1"/>
                <TextBlock x:Name ="QuizTitle" Text="{Binding CurrentQuiz.Title}"  FontSize="28" FontWeight="SemiBold" Foreground="#DCCB8E" 
                        HorizontalAlignment="Left" Margin="110,0,0,0" >
                </TextBlock>
                <TextBlock Text="{Binding ScoreText}" FontSize="18" HorizontalAlignment="Right" Margin="0,0,20,0" Foreground="#DCCB8E"/>
            </Grid>
        </Border>

        <!-- QuiezionCard (middle row 2)-->
        <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="90,40,90,0">
            <Border Padding="20" CornerRadius="15" >
                <StackPanel MinWidth="520" HorizontalAlignment="Stretch">
                    <TextBlock x:Name ="QuestionText" Text="{Binding CurrentQuestion.Statement}" FontSize="20" FontWeight="SemiBold" Foreground="White" 
                            TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <!-- Alternative-->
                    <StackPanel Margin="0,8,0,0">
                        <Button x:Name="AnswerBtn1" Click="AnswerButton_Click" Content="{Binding CurrentQuestion.Answers[0]}"  Background="#7A613F" Foreground="White" 
                             Padding="25" BorderBrush="#DCCB8E" BorderThickness="2" Margin="0,0,0,15" Tag="0"/>
                        <Button  x:Name="AnswerBtn2" Click="AnswerButton_Click" Content="{Binding CurrentQuestion.Answers[1]}"  Background="#7A613F" Foreground="White" 
                              Padding="25"  BorderBrush="#DCCB8E" BorderThickness="2" Margin="0,0,0,15" Tag=" 1"/>
                        <Button  x:Name="AnswerBtn3" Click="AnswerButton_Click" Content="{Binding CurrentQuestion.Answers[2]}" Background="#7A613F" Foreground="White" 
                              Padding="25" BorderBrush="#DCCB8E" BorderThickness="2" Margin="0,0,0,0" Tag="2"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>
