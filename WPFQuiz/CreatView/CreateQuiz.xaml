<UserControl x:Class="WPFQuiz.CreatView.CreateQuiz"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFQuiz.CreatView"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Grid.ColumnSpan="3" Padding="8" Background="#20FFFFFF" BorderThickness="0" Margin="0,0,0,20">
            <Grid>
                <!-- backåt button-->
                <Button Content="← Back" Click="Back_Click"  Padding="7" FontWeight="Bold" FontSize="16" HorizontalAlignment="Left"
                  VerticalAlignment="Top" Margin="15,18,0,0" Background="#7A613F" Foreground="White" BorderBrush="#DCCB8E"
                   BorderThickness="2"/>
                <!-- titeln-->
                <TextBlock Text="Create Quiz" FontSize="40" FontWeight="SemiBold" Foreground="#DCCB8E" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" TextWrapping="Wrap" >
                </TextBlock>
            </Grid>
        </Border>

        <!-- inmatningen , titel, question m.m. -->
        <Grid Grid.Row="1" Grid.ColumnSpan="3" Margin="90,10,90,30">
            <StackPanel Grid.Row="1">
                <TextBlock Text="Quiz Title " Foreground="#DCCB8E" FontWeight="Bold" Margin="0,0,0,5"/>
                <!-- ny titel -->
                <TextBox x:Name="TitleBox" TextWrapping="Wrap"
                 MinHeight="30" Background="#1E2A22" Foreground="White" BorderBrush="#DCCB8E" BorderThickness="1"/>

                <!-- fråga-->
                <TextBlock Text="Question " Foreground="#DCCB8E" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="StatementBox" 
                     TextWrapping="Wrap" MinHeight="30" Background="#1E2A22" Foreground="White"
                     BorderThickness="1" BorderBrush="#DCCB8E"/>

                <!-- Svar 1-->
                <TextBlock Text="Answer 1" Foreground="#DCCB8E" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="Answer1Box" Background="#1E2A22"
                     Foreground="White" BorderThickness="1" BorderBrush="#DCCB8E" MinHeight="30" HorizontalAlignment="Stretch"/>

                <!-- Svar 2 -->
                <TextBlock Text="Answer 2" Foreground="#DCCB8E" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="Answer2Box" Background="#1E2A22"
                       Foreground="White" BorderThickness="1" BorderBrush="#DCCB8E" MinHeight="30" HorizontalAlignment="Stretch"/>

                <!-- svar 3-->
                <TextBlock Text="Answer 3" Foreground="#DCCB8E" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="Answer3Box" Background="#1E2A22"
                      Foreground="White" BorderThickness="1" BorderBrush="#DCCB8E" MinHeight="30" HorizontalAlignment="Stretch"/>

                <!-- Rrätt svar och lägg till knap + save-->
                <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                    <TextBlock Text="Correct Answer" Foreground="#DCCB8E" FontWeight="Bold" VerticalAlignment="Center" 
                           Margin="0,0,5,0"/>
                    <ComboBox  x:Name="CorrectAnswerComboBox" MinWidth="100" Margin="10" Background="#1E2A22" Foreground="#1E2A22" 
                           BorderBrush="#DCCB8E" BorderThickness="1"
                          FontSize="16"  HorizontalAlignment="Stretch">
                        <ComboBoxItem Content="1"/>
                        <ComboBoxItem Content="2"/>
                        <ComboBoxItem Content="3"/>
                    </ComboBox>
                    <!-- Button add question and Save-->
                    <Button x:Name="AddQuestionButton" Click="AddQuestion_Click"  Content="Add question" Margin="20,10,10,10" Padding="5" Background="#7A613F"
                        Foreground="White" BorderBrush="#DCCB8E" BorderThickness="2" HorizontalAlignment="Stretch"/>
                    <Button Content="💾 Save Quiz" Click="SaveQuiz_Click" Margin="10" Background="#7A613F" Foreground="White" 
                        BorderBrush="#DCCB8E" HorizontalAlignment="Stretch"/>

                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
